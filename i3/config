# scratch
bindsym $mod+n move scratchpad
bindsym $mod+m scratchpad show

# cmus
bindsym $mod+o exec cmus-remote -u && pkill -RTMIN+9 i3blocks
#bindsym $mod+o exec mpc toggle
bindsym $mod+p exec cmus-remote -n && pkill -RTMIN+9 i3blocks
#bindsym $mod+p exec mpc next
bindsym $mod+i exec cmus-remote -r && pkill -RTMIN+9 i3blocks
#bindsym $mod+i exec mpc prev

# make a screenshot
bindsym --release Print exec --no-startup-id scrot -q 100 ~/Pictures/screenshots/%Y-%m-%d-%s.png

# volume
bindsym 0x1008ff11 exec amixer set Master 2%-
bindsym 0x1008ff13 exec amixer set Master 2%+

# switch between workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# windows settings
for_window [class="Firefox"] border none
for_window [class="QtCreator"] border none
for_window [class="URxvt" workspace=1] floating enable
for_window [class="Termite" workspace=1] floating enable
for_window [class="Transmission-gtk"] floating toggle
for_window [class="Dwarf_Fortress"] border none
